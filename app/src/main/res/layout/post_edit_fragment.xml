<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="panelListener"
            type="android.view.View.OnClickListener"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragments.PostEditFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.fragments.PostEditFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgPostCover"
                    android:layout_width="@dimen/img_cover_width_in_edit"
                    android:layout_height="@dimen/img_cover_width_in_edit" />
                <EditText
                    android:id="@+id/editPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入标题。。。"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/containerEditContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/containerEditPanel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/panel_height"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="添加文本"
                    android:onClick="@{panelListener::onClick}"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="添加图片"
                    android:onClick="@{panelListener::onClick}"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="预览"
                    android:onClick="@{panelListener::onClick}"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="发布"
                    android:onClick="@{panelListener::onClick}"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
